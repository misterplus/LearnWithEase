<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/message_item_room_cover"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_below="@id/message_item_room_name"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/nim_default_img"
        android:contentDescription="@string/empty"
        android:scaleType="centerCrop" />

    <include layout="@layout/nim_message_item_thumb_progress_bar_text" />

    <TextView
        android:id="@+id/message_item_room_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/empty"
        android:gravity="top|start"
        android:padding="0dip"
        android:text="【自习室邀请】邀请你加入%s自习室，快来一起学习吧！"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>