<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoom"
    android:layout_width="195dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/textRoomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/lwe_placeholder_room_name"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageCover"
        android:layout_width="145dp"
        android:layout_height="90dp"
        android:layout_below="@id/textRoomName"
        android:layout_marginStart="10dp"
        android:background="@drawable/nim_default_img"
        android:contentDescription="@string/empty"
        android:padding="3dp" />

    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/imageAvatar1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/empty"
        android:padding="3dp"
        android:src="@drawable/nim_avatar_default" />

    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/imageAvatar2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/imageAvatar1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/empty"
        android:padding="3dp"
        android:src="@drawable/nim_avatar_default" />

    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/imageAvatar3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/imageAvatar2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/empty"
        android:padding="3dp"
        android:src="@drawable/nim_avatar_default" />

    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/imageAvatar4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/imageAvatar3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/empty"
        android:padding="3dp"
        android:src="@drawable/nim_avatar_default" />

    <LinearLayout
        android:id="@+id/layoutTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageCover"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:divider="@drawable/lwe_transparent_divider_thin"
        android:orientation="horizontal"
        android:showDividers="middle"></LinearLayout>
</RelativeLayout>
